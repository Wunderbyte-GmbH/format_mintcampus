{{!
    @template format_mintcampus/grid

    Displays the grid.

    Context variables required for this template:
    * percentage - Percentage for bar.
    * activities - Completed activities / all visible activities.
    * primarycolor - Primary color.
    * secondarycolor - Secondary color.

    Example context (json):
    {
        "progressbar":
            {
                "percents": "49%",
                "activities": "1/10",
                "primarycolor": "#8139a3",
                "secondarycolor": "#d0b5dd",
                "fontcolor": "#ffffff",
            }
    }
}}
<style>
    #mintcampusactivityheader {
        margin-top: 0.4rem;
        margin-bottom: 0.4rem;
    }

    .mintcampuscompletion{
        text-align: center;
        font-weight: bold;
        line-height: 25px;
    }

    #mintcampusrating {
        font: normal normal normal 30px/1 FontAwesome;
    }

    #mintcampuscourserating {
        justify-content: flex-end;
        margin-bottom: 0.5rem;
        color: darkgoldenrod;
    }

    #mintcampuscourserating > :last-child {
        display: flex;
        align-items: center;
    }

    .ratingtitle {
        margin-right: 0.5rem;
        font-weight: bold;
        align-self: center;

    }

</style>
<div class="container">
    <div class="row">
        <a id="mintcampuscourserating" data-id="{{courseid}}" class="col align-self-end aabtn" href="#" style="cursor: pointer;display: flex;text-decoration: none;">
            <div class="ratingtitle">{{#str}} ratecourse, format_mintcampus {{/str}}</div>
            <div>{{{courserating}}}</div>
        </a>
    </div>
    <div class="row justify-content-between">
        <div class="col-sm-4">
            <div class="mintcampuscompletion">{{#str}} coursecompletionbar, format_mintcampus {{/str}}</div>
            {{{coursecompletionstate}}}
        </div>
        <div class="col-sm-4">
            {{#sectioncompletionstate}}<div class="mintcampuscompletion">{{#str}} sectioncompletionbar, format_mintcampus {{/str}}</div>{{/sectioncompletionstate}}
            {{{sectioncompletionstate}}}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{{activitynavigation}}}
        </div>
    </div>
</div>