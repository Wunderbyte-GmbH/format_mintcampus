{{!
    @template format_mintcampus/grid

    Displays the grid.

    Context variables required for this template:
    * percentage - Percentage for bar.
    * activities - Completed activities / all visible activities.
    * primarycolor - Primary color.
    * secondarycolor - Secondary color.

    Example context (json):
    {
        "progressbar":
            {
                "percents": "49%",
                "activities": "1/10",
                "primarycolor": "#8139a3",
                "secondarycolor": "#d0b5dd",
                "fontcolor": "#ffffff",
            }
    }
}}
<div class="progress-bar-container">
    <div class="progress-bar-line bg-secondary border-secondary">
        <div class="progress-bar-line-top bg-primary border-primary" style="height:0.2rem;width:{{progressbar.percents}}%">
            <div class="progress-bar-line-percentage badge bg-primary text-secondary">{{progressbar.percents}}%</div>
        </div>
    </div>
    {{#progressbar.activities}}
    <div class="progress-bar-line-activities badge text-secondary border-secondary">{{progressbar.activities}}</div>
    {{/progressbar.activities}}
</div>