{{!
    @template format_mintcampus/mintcampus_sections

    Displays the mintcampus.

    Context variables required for this template:
    * mintcampussections - The array of sections.
    * showcompletion - If completion is on and shown.
    * sectionbreak - There is a section break for this section.
    * sectionbreakheading - Section break heading.
    * number - Section number.
    * currentsection - Current section?
    * sectionurl - Section URL.
    * sectionname - Section name.
    * imageuri - Image URI.
    * alttext - Image alternative text.
    * generatedimageuri - Generated image URI.
    * sectioncompletionmarkup - Section completion markup if any.

    Example context (json):
    {
        "mintcampussections": [
            {
                "sectionbreak": false,
                "sectionbreakheading": "",
                "number": 41,
                "sectionurl": "https://mymoodle/course/view.php?id=4&section=1",
                "sectionname": "The first section",
                "imageuri": false,
                "generatedimageuri": "Base64 encoded svg",
                "sectioncompletionmarkup": ""
            },
            {
                "sectionbreak": true,
                "sectionbreakheading": "This is the section heading",
                "number": 42,
                "currentsection": true,
                "sectionurl": "https://mymoodle/course/view.php?id=4&section=2",
                "sectionname": "The second section",
                "imageuri": "https://mymoodle/pluginfile.php/358/format_mintcampus/displayedsectionimage/42/1/ducking.jpg.webp",
                "imagealttext": "Duckling",
                "generatedimageuri": false,
                "sectioncompletionmarkup": ""
            }
        ],
        "showcompletion": true
    }
}}

{{#mintcampussections}}
    <li class="themintcampus"
        role="region"
        aria-labelledby="flexaccordsectionname-{{number}}"
        aria-describedby="flexaccordsectionsummary-{{number}}"
    >
        <a class="flexaccordsectionwrapper flexaccordicon_link"
           role="link"
           href="{{#sectionurl}}{{sectionurl}}{{/sectionurl}}{{^sectionurl}}#{{/sectionurl}}"
        >
            <div class="sctilegraphic">
                {{{scgraphic}}}
            </div>
            <div id="flexaccordsection-{{number}}"
                 class="flexaccordicon_title"
            >
                <div id="flexaccordsectionname-{{number}}" class="icon_content">
                    <div class="title-part">{{#str}}module, format_mintcampus{{/str}} {{number}}</div>
                    <div class="title-part title-part-main">{{{sectionname}}}</div>
                </div>
            </div>
            <div id="flexaccordsectionsummary-{{number}}"
                 class="sectionsummary"
            >
                {{{summary}}}
            </div>
            {{^sectionurl}}
                <p class="alert alert-info noforumpost">{{#str}}nosectionactivity,format_mintcampus{{/str}}</p>
            {{/sectionurl}}
        </a>
    </li>
{{/mintcampussections}}